<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="hibernate1.Account" table="account">
    <id column="id" name="id">
      <generator class="native"/>
    </id>
    <property column="user_name" name="userName" type="string"/>
    <property column="address" name="address" type="string"/>
    <property column="phone" name="phone" type="string"/>
    <property column="birthday" name="birthday" type="date"/>
    <property column="full_name" name="fullName" type="string"/>
    <property column="password" name="password" type="string"/>
    <property name="image" column="image" type="binary" />
      <!-- <property name="image" column="image" type="blob" />-->
  </class>
</hibernate-mapping>
